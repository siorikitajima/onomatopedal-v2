      }
      if (keyCode == 70 || keyCode == 79 || keyCode == 55) { // f + o + 7
        let rain = new Rain();
        rains.push(rain);   
      }
      if (keyCode == 50 || keyCode == 57 || keyCode == 54) { // 2 + 9 + 6
        let OnoLetter = onomato[floor(random(0, onomato.length -1))];
        let letter = new Letter(OnoLetter, 'ono');
        letters.push(letter);
      }
      if (keyCode === 32) { // space
        let mode = new Mode();
        modes.push(mode);
      }
