        });

        var colorList = [
            // '#FCA311', '#289650', '#84397C', '#1996BE', '#F98444', '#299189', '#C83F54', '#959B3F', '#466488', '#AE4F70',
            // '#785000', '#005421', '#5E0050', '#005081', '#78320A', '#005050', '#8C0000', '#3C5A00', '#003264', '#780028',
            // '#FCDC78', '#64C882', '#AA78A0', '#64B4DC', '#FFAA78', '#64C8C8', '#DC788C', '#A0BE78', '#6E96B4', '#D282AA',
            // '#BE9B5F', '#BE9B5F', '#644661', '#527686', '#C88C6E', '#476F6C', '#8B555E', '#696E50', '#4D566C', '#9B5D76',
            // '#F0C81E', '#32C850', '#B432C8', '#00AADC', '#FF6E50', '#00DCC8', '#FF3264', '#96C800', '#0064C8', '#FF64B4'
        ];
        var colPalette = thepedal[0].color;
        var colData = theAnima[0][colPalette];
